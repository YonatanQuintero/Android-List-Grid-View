<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.udemy.fruitworld">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_fruit"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_fruit_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.ListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.GridActivity"></activity>
    </application>

</manifest>